#%Module1.0
module-whatis   "GenomeWorks is a GPU-accelerated library for biological sequence analysis, 
		 including:
		     cudaaligner - DCU-accelerated pairwise sequence alignment		
		     cudapoa     - DCU-accelerated partial order alignment
		 version: 0.4.0 with DCU2
		 website: https://github.com/clara-parabricks/GenomeWorks
"
module load 		mpi/hpcx/gcc-7.3.1
module load 		compiler/dtk/22.04.2
conflict	Genomeworks
set             APPS_HOME               /public/software/apps/Genomeworks-DCU2/0.4.0
prepend-path    PATH                    ${APPS_HOME}/samples
prepend-path    INCLUDE                 ${APPS_HOME}/include
prepend-path    LD_LIBRARY_PATH         ${APPS_HOME}/lib
prepend-path    LIBRARY_PATH	        ${APPS_HOME}/lib
